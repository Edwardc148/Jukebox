<!DOCTYPE html>
<html>
  <head>
    <title>Jukebox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "name": "<%= current_user.name %>"
        };
      </script>
      <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
